<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstadisticasActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_titulo"
        android:textSize="50sp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/txtCantidadEstudiantesProcesados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_cantEstProcesados" />

        <TextView
            android:id="@+id/campoEstProcesados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/txtCantEstGanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_cantEstGanan" />

        <TextView
            android:id="@+id/campoEstGanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/txtCantEstPierden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_cantEstPierden" />

        <TextView
            android:id="@+id/campoEstPierden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/txtCantEstRecuperan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_cantEstRecuperan" />

        <TextView
            android:id="@+id/campoEstRecuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp" />
    </GridLayout>
</LinearLayout>